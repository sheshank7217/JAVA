public class PascalsTriangle {

    // Method to print Pascal's Triangle of n rows
    public static void printPascalsTriangle(int n) {
        // Create a 2D array to store the values in Pascal's Triangle
        int[][] triangle = new int[n][n];

        // Calculate the values and store them in the array
        for (int row = 0; row < n; row++) {
            for (int col = 0; col <= row; col++) {
                // First and last values in each row are always 1
                if (col == 0 || col == row) {
                    triangle[row][col] = 1;
                } else {
                    // Calculate the value based on the sum of two numbers above it
                    triangle[row][col] = triangle[row - 1][col - 1] + triangle[row - 1][col];
                }
                // Print the value
                System.out.print(triangle[row][col] + " ");
            }
            // Move to the next line after each row
            System.out.println();
        }
    }

    public static void main(String[] args) {
        // Define the number of rows in Pascal's Triangle
        int n = 5;

        // Print Pascal's Triangle of n rows
        System.out.println("Pascal's Triangle of " + n + " rows:");
        printPascalsTriangle(n);
    }
}
